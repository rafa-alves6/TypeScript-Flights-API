{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    
    "rootDir": "./src",
    "outDir": "./dist",
    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",

    "strict": true,
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true,

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
